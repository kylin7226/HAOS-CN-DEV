# RKNPU device rules for Rockchip Neural Processing Unit
# This file creates device nodes and sets permissions for RKNPU devices

# Main RKNPU service device
KERNEL=="rknpu_service", MODE="0666", GROUP="video"

# RKNPU control device  
KERNEL=="rknpu_ctl", MODE="0666", GROUP="video"

# RKNPU memory devices
KERNEL=="rknpu_mem*", MODE="0666", GROUP="video"

# RKNPU debug devices (if debug build)
KERNEL=="rknpu_debug*", MODE="0644", GROUP="video"

# Add RKNPU devices to video group for compatibility
SUBSYSTEM=="rknpu", MODE="0666", GROUP="video"

# Set environment variables for RKNPU runtime
KERNEL=="rknpu_service", ENV{RKNPU_DEVICE}="1"